<script type="text/javascript" >

    function SaveUpdateCallBack(data) {

        if (data.Success == true) {
            alert("Successfully Updated.");
            //  document.getElementById("divDetails").style.display = "none";

            SetElement("txtEmail", data.Emails);
            document.getElementById("lblEmail").style.visibility = "visible";
            document.getElementById("txtEmail").style.visibility = "visible";

        }
    }

    jQuery(document).ready(function ($) {
        $("#divEmail2").dialog({
            autoOpen: false,
            minHeight: 'auto',
            width: 500,
            modal: true,
            buttons: {
            },
            close: function () {
                //allFields.val("").removeClass("ui-state-error");
            }
        });

        $("#divDetails").dialog({
            autoOpen: false,
            minHeight: 'auto',
            width: 500,
            modal: true,
            buttons: {
            },
            close: function () {
                //allFields.val("").removeClass("ui-state-error");
            }
        });

        
        $('#btnForgot').click(function () {
            $("#divDetails").dialog("open");
        });

        $('#btnCloses').click(function () {
            $("#divDetails").dialog("close");
        });

        $('#btnClose').click(function () {
            $("#divDetails").dialog("close");
        });

        $('#btnSent').click(function () {
            alert("btnSent");
        });

        $('#btnSave').click(function () {

            $.ajax({
                url: "/Account/forgotPass",
                type: "POST",
                dataType: "html",
                data: {
                    "id": document.getElementById("txtUsername").value,
                    "random": Math.random()
                },
                beforeSend: function () { },
                success: function (data) {
                    var res = jQuery.parseJSON(data);
                    SetElement("txtEmail", res.Emails);
                    document.getElementById("btnSave").value = "Sent";
                    document.getElementById("txtUsername").disabled = true;
                    document.getElementById("lblEmail").style.visibility = "visible";
                    document.getElementById("txtEmail").style.visibility = "visible";
                    document.getElementById("txtEmail").disabled = true;
                }
            });
        });
    });

    function ShowIt() {
        document.getElementById("divLoading").style.visibility = "visible";
    }

    function HideIt() {
        document.getElementById("divLoading").style.visibility = "hidden";
    }

</script>

