                <td>EXCHANGE :</td>
                <td>@Html.DropDownList("EQUP_LOCN_TTNAME", (IEnumerable<SelectListItem>)ViewBag.EQUP_LOCN_TTNAME, new { style = "width:150px"})
                    @*<select id="EQUP_LOCN_TTNAME" style="width:150px;" value="@ViewBag.EQUP_LOCN_TTNAME">@ViewBag.EQUP_LOCN_TTNAME</select>*@
                </td>
            </tr>
            <tr>
                <td>TYPE :</td>
                <td>@Html.DropDownList("EQUP_EQUT_ABBREVIATION", (IEnumerable<SelectListItem>)ViewBag.EQUP_EQUT_ABBREVIATION, new { style = "width:150px"})</td>
                <td>POSITION :</td>
                <td>@Html.DropDownList("FRAU_NAME", (IEnumerable<SelectListItem>)ViewBag.FRAU_NAME, new { style = "width:150px" })</td>
                <td><input type="button" value="Filter" id="btnSearch" /></td>
            </tr>
        </table>
    </div><br />
@if (Model.Count() > 0)
{
    <table id="rounded-corner" summary="ExchangeMaintenance List" width="850px">
        <thead>
            <tr>
                <th scope="col">EXC</th>
                <th scope="col">TYPE</th>
                <th scope="col">INDEX</th>            
                <th scope="col">POSITION</th>
                <th scope="col">PRODUCT NAME</th>
                <th scope="col">PAIR COUNT</th>
                <th scope="col">FRAU_POSITION</th>                 
            </tr>
        </thead>
        <tbody>
        @foreach (var res in Model)
        {
            <tr class="odd">
                <td id="gid" style="display:none;">@res.NRM_ID</td>
                <td>@res.EQUP_STATUS</td>
                <td>@res.EQUP_LOCN_TTNAME</td>
                <td>@res.EQUP_INDEX</td>
                <td>@res.EQUP_EQUM_MODEL</td>
                <td>@res.MIG_NIS_CHASSIS_ID</td>
                <td>@res.EQUP_INSERVICE</td>
                <td>@res.MODEL_VENDOR</td> @*ppanel.FRAU_POSITION*@
            </tr>    
        }
        </tbody>
    </table>
    <div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount 
        &nbsp;
        @if (Model.HasPreviousPage)
        {
            @Html.ActionLink("<<", "ListNisFrame", new { PTT_ID = ViewBag.PTT_1, EQUP_LOCN_TTNAME = ViewBag.EQUP_LOCN_TTNAME_1, EQUP_EQUT_ABBREVIATION = ViewBag.EQUP_EQUT_ABBREVIATION_1, FRAU_NAME = ViewBag.FRAU_NAME_1, page = 1 })
            @Html.Raw("&nbsp;");
            @Html.ActionLink("< Prev", "ListNisFrame", new { PTT_ID = ViewBag.PTT_1, EQUP_LOCN_TTNAME = ViewBag.EQUP_LOCN_TTNAME_1, EQUP_EQUT_ABBREVIATION = ViewBag.EQUP_EQUT_ABBREVIATION_1, FRAU_NAME = ViewBag.FRAU_NAME_1, page = Model.PageNumber - 1 })
        }
        else
        {

        }
        &nbsp;
        @if (Model.HasNextPage)
        {
            @Html.ActionLink("Next >", "ListNisFrame", new { PTT_ID = ViewBag.PTT_1, EQUP_LOCN_TTNAME = ViewBag.EQUP_LOCN_TTNAME_1, EQUP_EQUT_ABBREVIATION = ViewBag.EQUP_EQUT_ABBREVIATION_1, FRAU_NAME = ViewBag.FRAU_NAME_1, page = Model.PageNumber + 1 })
            @Html.Raw("&nbsp;");
            @Html.ActionLink(">>", "ListNisFrame", new { PTT_ID = ViewBag.PTT_1, EQUP_LOCN_TTNAME = ViewBag.EQUP_LOCN_TTNAME_1, EQUP_EQUT_ABBREVIATION = ViewBag.EQUP_EQUT_ABBREVIATION_1, FRAU_NAME = ViewBag.FRAU_NAME_1, page = Model.PageCount })
        }
        else
        {

        }
        <br/><b> Total @Model.TotalItemCount records</b>
    </div>
}
