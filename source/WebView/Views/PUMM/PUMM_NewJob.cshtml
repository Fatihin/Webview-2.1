@model WebView.Models.PUMM_NewJobModel
           
@{
    ViewBag.Title = "PUMM_NewJob";
}
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(function () {
            $("#btnSave").button();
        });
    });
</script>
<br />
<h2>New Plant Unit Material</h2>
@using (Html.BeginForm("PUMM_NewJob", "PUMM", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "Error. Please correct the errors and try again.");
    <table width="600px" cellpadding="0" cellspacing="0" border="0">      
        <tr>
            <td>PU ID</td>
            <td>
             @Html.TextBoxFor(m => m.x_PU_ID, new { style = "width:200px;" })
             @Html.ValidationMessageFor(m => m.x_PU_ID)
            </td>
        </tr>
        <tr>
            <td>PU Description</td>
            <td>
             @Html.TextBoxFor(m => m.x_PU_DESC, new { style = "width:200px;" })
             @Html.ValidationMessageFor(m => m.x_PU_DESC)
            </td>
        </tr>
        <tr>
            <td>Material ID</td>
            <td>
             @Html.TextBoxFor(m => m.x_MAT_ID, new { style = "width:200px;" })
             @Html.ValidationMessageFor(m => m.x_MAT_ID)
            </td>
        </tr>
         <tr>
            <td>Material Name</td>
            <td>
             @Html.TextBoxFor(m => m.x_MAT_NAME, new { style = "width:200px;" })
             @Html.ValidationMessageFor(m => m.x_MAT_NAME)
            </td>
        </tr>
         <tr>
            <td>Material Qty</td>
            <td>
            @Html.TextBoxFor(m => m.x_MAT_QTY, new { style = "width:200px;" })
            @Html.ValidationMessageFor(m => m.x_MAT_QTY)
            </td>
        </tr>           
    </table>
    <p>
        <input type="submit" value="Save" id="btnSave" />
    </p>    
}