@model WebView.Models.MaterialMastMaintenanceModel

@{
    ViewBag.Title = "MaterialMastMaintenance";
}
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(function () {
            $("#btnSave").button();
        });
    });
</script>
<br />
<h2>New Material Master Maintenance</h2>
@using (Html.BeginForm("NewMaterialMastMaintenance", "MaterialMastMaintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "Error. Please correct the errors and try again.");
    <table width="450px" cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td>Material Name</td>
            <td>
                @Html.TextBoxFor(m => m.MatName, new { style = "width:200px;" })
                @Html.ValidationMessageFor(m => m.MatName)
            </td>
        </tr>
        <tr>
            <td>Material UOM</td>
            <td>
                @*@Html.DropDownListFor(m => m.MatUOM, (IEnumerable<SelectListItem>)ViewBag.MatUOM, new { style = "width:200px;" })*@
                @Html.DropDownListFor(m => m.MatUOM, (IEnumerable<SelectListItem>)ViewBag.MatUOM, new { style = "width:200px;" })
                @Html.ValidationMessageFor(m => m.MatUOM )
            </td>
        </tr>
        <tr>
            <td>Material Price</td>
            <td>
                @Html.TextBoxFor(m => m.MatPrice, new { style = "width:200px;" })
                @Html.ValidationMessageFor(m => m.MatPrice)
            </td>
        </tr>
         <tr>
            <td>Material Category</td>
            <td>
                @*@Html.DropDownListFor(m => m.MatCat, (IEnumerable<SelectListItem>)ViewBag.MatCat, new { style = "width:200px;" })*@
                @Html.DropDownListFor(m => m.MatCat, (IEnumerable<SelectListItem>)ViewBag.MatCat, new { style = "width:200px;" })
                @Html.ValidationMessageFor(m => m.MatCat )
            </td>
        </tr>
         <tr>
            <td>Record Type</td>
            <td>
                @Html.TextBoxFor(m => m.RecordType, new { style = "width:200px;" })
                @Html.ValidationMessageFor(m => m.RecordType)
            </td>
        </tr>
         <tr>
            <td>Trans Type</td>
            <td>
                @Html.TextBoxFor(m => m.TransType, new { style = "width:200px;" })
                @Html.ValidationMessageFor(m => m.TransType)
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Save" id="btnSave" />
    </p>                                                                                   
}
