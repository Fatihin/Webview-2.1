@model WebView.Models.JobModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Error. Please correct the errors and try again.")
    <table width="400px" cellpadding="0" cellspacing="0" border="0">
      <tr>
        <td>
          Job id
        </td>
        <td>@Html.Hidden("JobId", (string)ViewBag.JobId)</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Name)</td>
        <td>@Html.TextBox("Name", (string)ViewBag.Name, new { style = "width:200px;" })</td>
      </tr>
      <tr>
        <td valign="top">@Html.LabelFor(model => model.Description)</td>
        <td>@Html.TextArea("Description", (string)ViewBag.Description, new { style = "width:200px;" })</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.ProjectId)</td>
        <td>@Html.DropDownListFor(x => x.ProjectId, (IEnumerable<SelectListItem>)ViewBag.product, new { style = "width:200px;" })</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.JobState)</td>
        <td>@Html.DropDownListFor(x => x.JobState, (IEnumerable<SelectListItem>)ViewBag.jobstate, new { style = "width:200px;" })</td>
      </tr>
    </table>
    <p>
      <input type="submit" value="Save" />
    </p>
}