<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link type="text/css" href="@Url.Content("~/Content/css/smoothness/jquery-ui-1.8.16.custom.css")" rel="Stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.dropmenu.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/general.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.1.min.js")"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#nav-one").dropmenu({});
        });

    </script>
    <style type="text/css"> 
        body {
	        margin: 0; padding: 0;
	        font: 11px normal Arial, Helvetica, sans-serif;
            background:url("@Url.Content("~/Content/images/all_bg.jpg")") left top repeat-x #b2b2b2; position:relative; min-width:1000px; min-height:100%;
        }
        .popup_block{
	        display: none; /*  --hidden by default--*/
	        background: #fff;
            height:400px;
	        padding: 20px;
	        border: 20px solid #ddd;
	        float: left;
	        font-size: 1.2em;
	        position: fixed;
	        top: 10%; left: 50%;
	        z-index: 99999;
	        /*--CSS3 Box Shadows--*/
	        -webkit-box-shadow: 0px 0px 20px #000;
	        -moz-box-shadow: 0px 0px 20px #000;
	        box-shadow: 0px 0px 20px #000;
	        /*--CSS3 Rounded Corners--*/
	        -webkit-border-radius: 10px;
	        -moz-border-radius: 10px;
	        border-radius: 10px;
            margin-left:-420px;
            overflow: scroll;
            overflow-x: hidden;
            -ms-overflow-x: hidden;
        }
        .maincontent {
            background:url("@Url.Content("~/Content/images/all_m.jpg")") center top no-repeat;
        }
        .container {
	        width: 100%;
	        margin: 0 auto;
	        position: relative;
        }

        ul.dropmenu {
	        float: left;
	        margin: 0px; 
	        padding: 0px;
	        background:url("@Url.Content("~/Content/images/navigation.png")") repeat-x scroll 0 0 transparent;
	        display:block;
	        height:35px;
        }

        .dropmenu li a, .dropmenu li{
	        float: left;
        }
        .dropmenu li a:hover, .dropmenu li.open > a{
	        color: #0657AD;
	        background: #FFFFFF url("@Url.Content("~/Content/images/gradient.png")") repeat-x scroll 0 0;	
        }

        .dropmenu li{
	        list-style: none;
	        position: relative;	
	        top: 1px;
        }

        .dropmenu li span{
	        display: block;
	        height: 10px;
	        width: 10px;
	        position: absolute;
	        top: 12px;
	        right: 10px;
	        background:url"(@Url.Content("~/Content/images/arrow_up.png")") repeat-x scroll 0 0 transparent;
        }
        .dropmenu li a:hover span, .dropmenu li.open > a span{
	        background-image: url("@Url.Content("~/Content/images/arrow_hover.png")");	
        }

        .dropmenu li a, .dropmenu li div{
	        padding: 9px 30px 8px 15px;
	        text-decoration: none;
	        color: #FFF;
	        border-right:1px solid #4A779D;
	        text-transform:uppercase;
        }

        /* Submenu */
        .dropmenu li > ul, .dropmenu li > div {
	        display: none;
	        position: absolute;
	        left: 0;
	        top: 100%;
	        padding: 0px;
	        margin: 0px;
	        background:url("@Url.Content("~/Content//images/gradient.png")") repeat-x scroll 0 0 #FFFFFF;
	        border-bottom:1px solid #CCCCCC;
        }

        .dropmenu.css-only li:hover > ul, .dropmenu.css-only li:hover > div{
	        display: block;
        }

        .dropmenu li ul li, .dropmenu li ul li a{
	        float: none;	
	        color: #0657AD;
	        text-transform: none;
	        text-decoration: underline;
        }

        .dropmenu li ul li{
	        _display: inline;	
        }

        .dropmenu li > div{
	        width: 200px;
        }

        .dropmenu li ul li a span{
	        background:url("@Url.Content("~/Content//images/arrow_sub.gif")") repeat-x scroll 0 0 transparent;	
        }

        /* Sub submenu */

        .dropmenu li ul li a{
	        width: 150px;
	        display: block;	
	        border:1px solid #CCCCCC;
	        border-top: none;
        }

        .dropmenu li ul li a:hover{
	        color:#F67A00;
	        background: #F0F0F0;
        }

        .dropmenu li ul li ul, .dropmenu li ul li > div{
	        top: 0px;
	        left: 101%;
        }


        /*******************************************************
        Login form
        *******************************************************/
        .dropmenu li > div.login{
	        border:1px solid #CCCCCC;
	        width: 210px;	
        }
        .dropmenu li > div.login div{
	        border: none;
        }
        .login label{
	        display:block;
	        padding:0 0 4px;
	        color:#595959;	
        }
        .login input {
	        border:1px solid #4A779D;
	        margin-bottom:8px;
	        padding:3px 8px;
	        width:164px;
        }
        .login button {
	        background:url("@Url.Content("~/Content/Content/images/navigation.png")") repeat-x scroll 0 0 #4A779D;
	        border:1px solid #4A779D;
	        color:#FFFFFF;
	        padding:4px 10px;
	        width:175px;
        }

        /*******************************************************
        Products div
        *******************************************************/
        .dropmenu li > div.products{
	        width: 285px;

        }
        .dropmenu li:hover > div.products ul{
	        display: block;
        }
        .dropmenu li > div.products *{
	        padding: 0px;
	        margin: 0px;
	        position: relative;	
	        border: none;
        }
        .dropmenu li > div.products li{
	        overflow: hidden;
	        padding: 10px 0px;
	        border-bottom:1px solid #CCCCCC;
        }
        .dropmenu li > div.products li img{
	        float: left;
	        margin:  0 15px;
        }
        .dropmenu li > div.products{
	        border:1px solid #CCCCCC;
	        color:#595959;
        }
        .dropmenu li > div.products ul li h2{
	        font-size: 16px;
	        margin: 0px;
	        padding: 2px 0 3px;
        }
        .dropmenu li > div.products ul li p{
	        color:#666666;
	        font-size:10px;
	        margin:0;
	        padding:0;
        }
        .dropmenu li > div.products ul li p a {
	        border:medium none;
	        color:#666666;
	        display:inline;
	        margin:0;
	        padding:0;
	        text-transform:none;
	        background: none;
        }
        .dropmenu li > div.products ul{
	        padding: 0px;
	        margin: 0px;	
        }
        .dropmenu li > div.products ul li p a:hover {
	        color:#222;
	        text-decoration: none !important;
        }
        .dropmenu li > div.products .small{
	        padding: 15px;
	        color:#595959;
	        font-size: 9px;
	        text-transform: none;
        }

        /*******************************************************
        Tutorials div
        *******************************************************/
        .dropmenu li > div.tutorials *{
	        display: none;	
        }

        #header {
	        background:url("@Url.Content("~/Content/images/top_bg.jpg")");
	        width:902px;
	        padding-top: 0px;
        }
        #header img {
	        margin: 10px 0 50px;
        }
    </style>
</head>
<body>
    <div class="maincontent">
    <div class="page">
        <div id="header">
            <div id="title">
                <img src="@Url.Content("~/Content/images/neps_logo_small_tranparent.png")" alt="logo" />
            </div>
            <div style="padding-top:142px;background-image:url("@Url.Content("~/Content/images/navigation.png")")">
                <ul id="nav-one" class="dropmenu css-only"> 
			        <li> 
				        <a href="@Url.Content("~/Home")">Home</a> 
			        </li> 
			        <li> 
				        <a href="#">Job Management</a> 
				        <ul> 
					        <li>@Html.ActionLink("List", "List", "Job")</li> 
					        <li>@Html.ActionLink("New", "NewJob", "Job")</li> 
					        <li>@Html.ActionLink("Notification", "Notification", "Job")</li>
				        </ul> 
			        </li>          
                    <li> 
				        <a href="#item3">Non Network</a> 
				        <ul style="display:none">
                            <li> 
				                <a href="#">Plan Unit Management(Copper)</a> 
				                <ul>
					                <li>@Html.ActionLink("List", "PlanUnit_List", "PlanUnit")</li> 
					                <li>@Html.ActionLink("New", "PlanUnit_NewJob", "PlanUnit")</li> 					             
				                </ul>
			                </li>
                            <li> 
				                <a href="#">Plan Unit Material Maintenance(Copper)</a> 
				                <ul>
					                <li>@Html.ActionLink("List", "PUMM_List", "PUMM")</li>                            
					                <li>@Html.ActionLink("New", "PUMM_NewJob", "PUMM")</li> 					    
				                </ul>
			                </li>
                            <li> 
				                <a href="#">Plan Unit Resource Maintenance(Copper)</a> 
				                <ul>
					                <li>@Html.ActionLink("List", "PURM_List", "PURM")</li>                            
					                <li>@Html.ActionLink("New", "PURM_NewJob", "PURM")</li> 					    
				                </ul>
			                </li>
                            <li> 
				                <a href="#">Plan Unit Feature Reference Maintenance(Copper)</a> 
				                <ul>
					                <li>@Html.ActionLink("List", "PUFRM_List", "PUFRM")</li>                            
					                <li>@Html.ActionLink("New", "PUFRM_NewJob", "PUFRM")</li> 					    
				                </ul>
			                </li>
                            <li> 
				                <a href="#">Contract Summary Maintenance(Fibre)</a> 
				                <ul>
					                <li>@Html.ActionLink("List", "CSM_List", "CSM")</li>                            
					                <li>@Html.ActionLink("New", "CSM_NewJob", "CSM")</li> 					    
				                </ul>
			                </li>
                            <li> 
				                <a href="#">Contract Summary Feature Reference Maintenance(Fibre)</a> 
				                <ul>
					                <li>@Html.ActionLink("List", "CSFRM_List", "CSFRM")</li>                            
					                <li>@Html.ActionLink("New", "CSFRM_NewJob", "CSFRM")</li> 					    
				                </ul>
			                </li> 
					        <li> 
				                <a href="#">PF Maintenance</a> 
				                <ul>
					                <li><a href="#">List</a></li> 
					                <li><a href="#">New</a></li> 
				                </ul>
			                </li> 
				        </ul> 
			        </li>
                    <li><a href="#">Help</a></li>
                    <li style="width:500px"></li>		
		        </ul> 
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <footer>
        </footer>
    </div>
    </div>
</body>
</html>
