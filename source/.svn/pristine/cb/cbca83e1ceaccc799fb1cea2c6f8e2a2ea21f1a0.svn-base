                @Html.LabelFor(m => m.GROUPID) <span style="color:Red;">*</span>
                </td>
                <td>
                @Html.DropDownListFor(m => m.GROUPID, (IEnumerable<SelectListItem>)ViewBag.groupID, "Select Group", new { style = "width:300px;", id = "groupID" })
