<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site_3D.css")" rel="stylesheet" type="text/css" />
    <link type="text/css" href="@Url.Content("~/Content/css/start/jquery-ui-1.8.16.custom.css")" rel="Stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")"></script>
    <!--<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>-->
    <script src="@Url.Content("~/Scripts/jquery.dropmenu.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.msgBox.v1.js")"></script>
    <script type="text/javascript">
      var globalJquery = null;

      jQuery(document).ready(function ($) {
          globalJquery = $;

          $("#nav-one").dropmenu({});
      });
    </script>
    <script src="@Url.Content("~/Scripts/general.js")" type="text/javascript"></script>
    <style type="text/css"> 
      body
      {
          margin: 0; padding: 0;
          font: 11px normal Arial, Helvetica, sans-serif;
          background: url("@Url.Content("~/Content/images/all_bg.jpg")") left top repeat-x #b2b2b2; position: relative; min-width: 200px; min-height: 200px;
      }
      #fade
      { /*--Transparent background layer--*/
          display: none; /*--hidden by default--*/
          background: #000;
          position: fixed; left: 0; top: 0;
          width: 200px; height: 200px;
          opacity: .80;
          z-index: 9999;
      }
      .popup_block
      {
          display: none; /*  --hidden by default--*/
          background: #fff;
          max-height: 400px;
          padding: 20px;
          border: 20px solid #ddd;
          float: left;
          font-size: 1.2em;
          position: fixed;
          top: 10%; left: 20%;
          z-index: 99999;
          /*--CSS3 Box Shadows--*/
          -webkit-box-shadow: 0px 0px 20px #000;
          -moz-box-shadow: 0px 0px 20px #000;
          box-shadow: 0px 0px 20px #000;
          /*--CSS3 Rounded Corners--*/
          -webkit-border-radius: 10px;
          -moz-border-radius: 10px;
          border-radius: 10px;
          /*margin-left:-420px;*/
          max-width: 800px;
          overflow: scroll;
          overflow-x: hidden;
          -ms-overflow-x: hidden;
      }
      .maincontent
      {
          background: url("@Url.Content("~/Content/images/all_m.jpg")") center top no-repeat;
      }
      .container
      {
          width: 100%;
          margin: 0 auto;
          position: relative;
      }
      
      /*******************************************************
      Login form
      *******************************************************/
      #header
      {
          @*background:url("@Url.Content("~/Content/images/top_bg.jpg")");*@
          width: 100px;
          padding-top: 0px;
      }
      #header img
      {
          margin: 0px 0 50px;
      }
    </style>
  </head>
  <body>
          
    <div class="maincontent">
      <div class="page">
        <div id="header">
          <div id="fade"></div>
        </div>
        <div id="main">
          @RenderBody()
        </div>
      </div>
    </div>

  </body>
</html>
